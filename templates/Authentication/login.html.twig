{% extends 'homepage/homepage.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block body %}

{#  Small devices sections  #}
<div id="login-box-sm" class="row justify-content-center viewport-height bg-light d-lg-none" >
        <div class="col-10 center-div-vertically">

            <form action="{{ path('security_login') }}" method="post">
                <div class="card">
                    <div class="card-header">
                        Entrez vos identifiants de connexion
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Identifiant</span>
                            </div>
                            <input type="text" value="{{ last_username }}" name="_username" class="form-control" aria-label="Login" required autofocus>
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Mot de passe</span>
                            </div>
                            <input type="password" name="_password" class="form-control" aria-label="Password" id="password-input" required >
                            <div class="input-group-append">
                                <span class="input-group-text" id="password-view" onclick="seePassword()"><i class="far fa-eye"></i></span>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# Remember me #}
                        <div class="checkbox mb-3">
                            <input type="checkbox" id="remember_me" name="_remember_me"/>
                            <label for="remember_me" class="ml-md-2">Se souvenir de moi</label>
                        </div>

                        <button class="btn btn-outline-kloc-indigo" type="submit"> Se Connecter </button>
                    </div>
                </div>
            </form>

        </div>
    </div>


{#  Large screen section  #}
<div class="justify-content-center viewport-height bg-light d-none d-lg-flex" >
    <div id="login-box" class="col-4 center-div-vertically">

        <form action="{{ path('security_login') }}" method="post">
        <div class="card">
            <div class="card-header">
                Entrez vos identifiants de connexion
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Identifiant</span>
                    </div>
                    <input type="text" value="{{ last_username }}" name="_username" class="form-control" aria-label="Login" required autofocus>
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Mot de passe</span>
                    </div>
                    <input type="password" name="_password" class="form-control" aria-label="Password" id="password-input" required >
                    <div class="input-group-append">
                        <span class="input-group-text" id="password-view" onclick="seePassword()"><i class="far fa-eye"></i></span>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# Remember me #}
                <div class="checkbox mb-3">
                    <input type="checkbox" id="remember_me" name="_remember_me"/>
                    <label for="remember_me" class="ml-md-2">Se souvenir de moi</label>
                </div>

                <button class="btn btn-outline-kloc-indigo" type="submit"> Se Connecter </button>
            </div>
        </div>
        </form>

    </div>
</div>
{% endblock %}